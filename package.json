{
  "name": "vite-ejs-scss",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "cross-env MINIFY=true run-s build:only html:fix imagemin",
    "build:no-minify": "cross-env MINIFY=false run-s build:only lint:build",
    "build:only": "vite build",
    "preview": "vite preview --port 8080",
    "lint:build": "run-s imagemin html:fix lint:css-fix-build lint:css-fix-build lint:css-fix-build lint:js-fix-build",
    "lint:js": "eslint --ext .js,.jsx,.cjs,.mjs,.ts --ignore-path .gitignore .",
    "lint:js-fix": "prettier --write './src/**/*.js' && eslint --fix './src/**/*.js'",
    "lint:js-fix-build": "prettier --write './dist/**/*.js' && eslint --fix './dist/**/*.js'",
    "lint:fix": "run-s lint:css-fix int:js-fix",
    "lint:css": "stylelint ./src/**/*.scss",
    "lint:css-fix": "prettier -w **/*.scss && stylelint --fix ./src/**/*.scss",
    "lint:css-fix-build": "prettier -w ./dist/**/*.css && stylelint --fix ./dist/**/*.css",
    "html:fix": "find dist -name '*.html' -exec html-beautify -r {} \\;",
    "imagemin": "node imagemin.js"
  },
  "browserslist": [
    "last 2 versions",
    "not ie < 11",
    "Android >= 12",
    "iOS >= 15",
    "Safari >= 14"
  ],
  "devDependencies": {
    "autoprefixer": "^10.4.17",
    "cross-env": "^7.0.3",
    "ejs": "^3.1.9",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "imagemin": "^8.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.1",
    "js-beautify": "^1.14.11",
    "npm-run-all": "^4.1.5",
    "postcss-sort-media-queries": "^5.2.0",
    "postcss-url": "^10.1.3",
    "prettier": "^3.2.5",
    "sass": "^1.70.0",
    "stylelint": "^16.2.1",
    "stylelint-config-recess-order": "^4.6.0",
    "stylelint-config-recommended-scss": "^14.0.0",
    "stylelint-order": "^6.0.4",
    "stylelint-prettier": "^5.0.0",
    "stylelint-scss": "^6.1.0",
    "vite": "^5.1.0",
    "vite-plugin-ejs": "^1.7.0",
    "vite-plugin-live-reload": "^3.0.3"
  }
}
